// portfolio.js

// Function to load text file content
function loadTextFile(file, callback) {
    var rawFile = new XMLHttpRequest();
    rawFile.overrideMimeType("text/plain");
    rawFile.open("GET", file, true);
    rawFile.onreadystatechange = function () {
        if (rawFile.readyState === 4 && rawFile.status == "200") {
            callback(rawFile.responseText);
        }
    }
    rawFile.send(null);
}

// Function to create card divs from text content
function createCardDivsFromText(content) {
    var portfolioContainer = document.getElementById('portfolio');
    var cardData = content.split('---');
    for (var i = 0; i < cardData.length; i++) {
        var cardInfo = cardData[i].trim().split('\n');
        if (cardInfo.length >= 5) {
            var cardDiv = document.createElement('div');
            cardDiv.classList.add('card');

            var imgSrc = cardInfo[0].trim();
            var altText = cardInfo[1].trim();
            var title = cardInfo[2].trim();
            var description = cardInfo[3].trim();
            var githubLink = cardInfo[4].trim();

            cardDiv.innerHTML = `
                <img src="${imgSrc}" alt="${altText}">
                <div class="card-content">
                    <h2>${title}</h2>
                    <p>${description}</p>
                    <button onclick="window.open('${githubLink}')">View on GitHub</button>
                </div>
            `;
            portfolioContainer.appendChild(cardDiv);
        }
    }
}

// Load text file and create card divs
loadTextFile('content.txt', createCardDivsFromText);
